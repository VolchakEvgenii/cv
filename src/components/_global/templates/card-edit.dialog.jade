md-dialog.user-edit-dialog.dialog(aria-label='buy')
    md-dialog-content
            form.layout-column(name="vm.form", role="form", novalidate="", ng-submit="vm.dialogSave()")
                md-input-container(ng-class="{ 'md-input-invalid' : vm.form.title.$invalid && !vm.form.title.$pristine }")
                    label Title
                    input(type="text", required="", ng-model="vm.expElem.title", name="title")
                    .error-container(ng-messages='vm.form.title' ng-if="vm.form.title.$dirty || vm.form.title.$touched")
                        .error(ng-message='required') Title field is required

                md-input-container(ng-class="{ 'md-input-invalid' : vm.form.dateRange.$invalid && !vm.form.dateRange.$pristine }")
                    label Date Range
                    input(type="text", required="", ng-model="vm.expElem.dateRange", name="icon")
                    .error-container(ng-messages='vm.form.dateRange' ng-if="vm.form.dateRange.$dirty || vm.form.dateRange.$touched")
                        .error(ng-message='required') Date Range field is required

                md-input-container(ng-class="{ 'md-input-invalid' : vm.form.icon.$invalid && !vm.form.icon.$pristine }")
                    label Icon URL
                    input(type="text", ng-model="vm.expElem.icon", name="icon")

                md-input-container(ng-class="{ 'md-input-invalid' : vm.form.link.$invalid && !vm.form.link.$pristine }")
                    label Link
                    input(type="text", ng-model="vm.expElem.link", name="icon")

                md-input-container(ng-class="{ 'md-input-invalid' : vm.form.technologies.$invalid && !vm.form.technologies.$pristine }")
                    label Technologies
                    input(type="text", ng-model="vm.expElem.technologies", name="icon")

                md-input-container(ng-class="{ 'md-input-invalid' : vm.form.description.$invalid && !vm.form.description.$pristine }")
                    label Description
                    textarea(ng-model="vm.expElem.description", name="icon")

    md-dialog-actions.layout-row.layout-align-center-center
        md-button.flex-xs-33(ng-click="vm.dialogSave()", ng-disabled="!vm.form.$valid") Save
        md-button.flex-xs-33(ng-click="vm.dialogClose()") Cancel